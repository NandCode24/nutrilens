//  MEDICINE MODEL â€” OCR + Medicine Details
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
model Medicine {
  id           String   @id @default(uuid())
  userId       String
  name         String
  brand        String?
  imageUrl     String?
  dosage       String?
  uses         String?
  precautions  String?
  createdAt    DateTime @default(now())

  // Relations
  user      User     @relation(fields: [userId], references: [id])
  libraries Library[]
}

