//  USER MODEL â€” Authentication + Profile
// â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
model User {
  id             String     @id @default(uuid())
  name           String?
  email          String     @unique
  password       String
  age            Int?
  gender         String?
  heightCm       Float?
  weightKg       Float?
  allergies      String[]        // stored as text[] in Postgres
  healthGoals    String?
  dietType       String?         // ğŸ NEW â€” "vegan", "keto", etc.
  medicalHistory String[]        // ğŸ©º NEW â€” ["diabetes", "asthma"]
  bmr            Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  foodScans      FoodScan[]
  medicines      Medicine[]
  libraries      Library[]
  tips           Tip[]
}

